<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".login"
        android:orientation="vertical"

>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#E4CF33A2"
            android:orientation="horizontal">

        <LinearLayout
                android:id="@+id/back"
                android:visibility="invisible"
                android:layout_width="56dp" android:layout_height="56dp"
                android:layout_weight="0"
                android:layout_gravity="center"
                android:gravity="center_horizontal">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="15dp"
                    android:foregroundGravity="left"
            />
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:layout_gravity="center"
                      android:gravity="center_horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="LOGIN"
                    android:layout_marginRight="56dp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="22dp"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <View android:gravity="bottom"
              android:layout_gravity="center"
              android:background="@drawable/loginimage"
              android:backgroundTint="#E4CF33A2"
              android:layout_width="match_parent"
              android:layout_height="378dp" android:layout_marginBottom="0dp"
              android:layout_alignParentBottom="true"
              android:layout_alignParentStart="true"
              android:layout_alignParentRight="true" android:layout_marginEnd="0dp"
              android:layout_alignParentEnd="true">

        </View>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:scrollbars="none">


            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                    />

                    <ProgressBar
                            android:id="@+id/progress"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginTop="150dp"

                    />
                    <LinearLayout
                            android:id="@+id/login_form"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <EditText
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:inputType="phone"
                                android:ems="10"
                                android:padding="0dp"
                                android:paddingStart="20dp"
                                android:maxLength="10"
                                android:background="@drawable/roun"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="20dp"
                                android:id="@+id/driver_mobile"
                                android:hint="Enter Mobile No."
                                android:textColorHint="#222222"
                                android:backgroundTint="#f2f2f2"
                                android:textSize="16sp"
                                android:paddingLeft="20dp"
                                android:layout_marginTop="40dp"
                                android:layout_marginBottom="20dp"/>
                        <EditText
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:inputType="textPassword"
                                android:ems="10"
                                android:padding="14dp"
                                android:background="@drawable/roun"
                                android:textColorHint="#222222"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="20dp"
                                android:id="@+id/password"
                                android:hint="OTP"
                                android:backgroundTint="#f2f2f2"
                                android:textSize="16sp"
                                android:paddingLeft="20dp"
                                android:layout_marginBottom="8dp"/>
                        <Button
                                android:id="@+id/loginn"
                                android:text="SUBMIT"
                                android:padding="0dp"
                                android:textColor="#ffffff"
                                android:textSize="16sp"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/roun"
                                android:backgroundTint="#222222"
                                android:layout_width="match_parent"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_height="50dp"
                        />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </RelativeLayout>

</LinearLayout>